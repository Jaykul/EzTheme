                            </ListItem>
                            <ListItem>
                                <Label>cyan</Label>
                                <ScriptBlock>$_.cyan.ToVtEscapeSequence() + $_.cyan.ToString() + "$([char]27)[49;39m"</ScriptBlock>
                            </ListItem>
                            <ListItem>
                                <Label>white</Label>
                                <ScriptBlock>$_.white.ToVtEscapeSequence() + $_.white.ToString() + "$([char]27)[49;39m"</ScriptBlock>
                            </ListItem>
                            <ListItem>
                                <Label>brightBlack</Label>
