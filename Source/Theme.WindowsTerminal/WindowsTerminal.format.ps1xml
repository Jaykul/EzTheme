<Configuration>
    <ViewDefinitions>
        <View>
            <Name>WindowsTerminal-Preview</Name>
            <ViewSelectedBy>
                <TypeName>WindowsTerminal.ColorScheme</TypeName>
            </ViewSelectedBy>
            <CustomControl>
                <CustomEntries>
                    <CustomEntry>
                        <CustomItem>
                            <ExpressionBinding>
                                <ScriptBlock>
                                    $ansi = 30
                                    $bold = $false
                                    $this = $_
                                    Write-Host $($this.background.ToVtEscapeSequence($true) + $this.foreground.ToVtEscapeSequence())
                                    Write-Host $this.Name
                                    Write-Host "         m     40m     41m     42m     43m     44m     45m     46m     47m     100m    107m      "
                                    Write-Host -NoNewLine "    m"

                                    $TerminalColors = $null, "black", "brightBlack", "red", "brightRed", "green", "brightGreen", "yellow", "brightYellow", "blue", "brightBlue", "purple", "brightPurple", "cyan", "brightCyan", "white", "brightWhite"
                                    $DarkColors = $null, "Black", "Red", "Green", "Yellow", "Blue", "Purple", "Cyan", "White", "brightBlack", "brightWhite"

                                    foreach($fg in $TerminalColors) {
                                        Write-Host -NoNewLine $($this.background.ToVtEscapeSequence($true) + $this.foreground.ToVtEscapeSequence())
                                        if ($fg) {
                                            Write-Host -NoNewLine "$(if($bold){"1;"}else{"  "})$($ansi)m"
                                            $ansi += $bold
                                            $bold = !$bold
                                        }
                                        Write-Host -NoNewLine $(if($null -ne $fg) { $this.$fg.ToVtEscapeSequence() })
                                        foreach($bg in $DarkColors) {
                                            Write-Host -NoNewLine $(if($null -ne $bg) { $this.$bg.ToVtEscapeSequence($true) })
                                            Write-Host -NoNewLine $("  gYw  " + $this.background.ToVtEscapeSequence($true) + " ")
                                        }
                                        Write-Host "  "
                                    }
                                    Write-Host "$([char]27)[0m"
                                </ScriptBlock>
                            </ExpressionBinding>
                        </CustomItem>
                    </CustomEntry>
                </CustomEntries>
            </CustomControl>
        </View>
        <View>
            <Name>WindowsTerminal-Theme</Name>
            <ViewSelectedBy>
                <TypeName>WindowsTerminal.ColorScheme</TypeName>
            </ViewSelectedBy>
            <ListControl>
                <ListEntries>
                    <ListEntry>
                        <ListItems>
                            <ListItem>
                                <Label>Name</Label>
                                <ScriptBlock>$_.Name</ScriptBlock>
                            </ListItem>
                            <ListItem>
                                <Label>background</Label>
                                <ScriptBlock>$_.background.ToVtEscapeSequence() + $_.background.ToString() + "$([char]27)[49;39m"</ScriptBlock>
                            </ListItem>
                            <ListItem>
                                <Label>foreground</Label>
                                <ScriptBlock>$_.foreground.ToVtEscapeSequence() + $_.foreground.ToString() + "$([char]27)[49;39m"</ScriptBlock>
                            </ListItem>
                            <ListItem>
                                <Label>black</Label>
